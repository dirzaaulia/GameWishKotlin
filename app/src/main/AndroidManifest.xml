<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dirzaaulia.gamewish">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GameWishApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GameWish.DayNight"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".modules.activity.login.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".modules.activity.webview.WebViewActivity"
            android:exported="true" />
        <activity
            android:name=".modules.activity.splashscreen.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".modules.activity.main.MainActivity" />
    </application>

</manifest>