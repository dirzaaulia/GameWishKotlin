<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dirzaaulia.gamewish.modules.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_dealsFragment"
            app:destination="@id/dealsFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.dirzaaulia.gamewish.modules.search.SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.dirzaaulia.gamewish.modules.details.DetailsFragment"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="games"
            app:argType="com.dirzaaulia.gamewish.data.models.Games" />
        <action
            android:id="@+id/action_searchDetailsFragment_to_searchDetailsImageViewerFragment"
            app:destination="@id/detailsImageViewerFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsImageViewerFragment"
        android:name="com.dirzaaulia.gamewish.modules.details.imageviewer.DetailsImageViewerFragment">
        <argument
            android:name="screenshots"
            app:argType="com.dirzaaulia.gamewish.data.models.Screenshots" />
    </fragment>
    <fragment
        android:id="@+id/dealsFragment"
        android:name="com.dirzaaulia.gamewish.modules.deals.DealsFragment"
        tools:layout="@layout/fragment_deals"/>

</navigation>