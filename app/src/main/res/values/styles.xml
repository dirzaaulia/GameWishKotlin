<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.GameWish.BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="labelVisibilityMode">selected</item>
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="itemTextColor">@color/bottom_nav_item</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.GameWish.BottomNavigation</item>
    </style>

    <style name="Widget.GameWish.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/color_on_surface_emphasis_high</item>
    </style>

    <style name="Widget.Gamewish.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/scrimBackground</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Gamewish.Headline6</item>
    </style>

    <style name="Widget.GameWish.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/color_on_primary_surface_emphasis_high</item>
        <item name="android:textAppearance">@style/TextAppearance.Gamewish.Headline6</item>
    </style>

    <style name="ProgressBarStyle" parent="Theme.GameWish">
        <item name="android:colorAccent">@color/color_on_surface_emphasis_high</item>
    </style>
    
    <style name="SwitchStyle" parent="Theme.GameWish">
        <item name="colorOnSurface">@color/color_on_surface_emphasis_high</item>
    </style>

    <style name="SearchStyle" parent="Theme.GameWish">
        <item name="editTextColor">@color/color_on_primary_surface_emphasis_high</item>
        <item name="searchIcon">@drawable/ic_baseline_filter_list_24</item>
        <item name="closeIcon">@drawable/ic_baseline_close_24</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>