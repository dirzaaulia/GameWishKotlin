<resources xmlns:tools="http://schemas.android.com/tools">
    
    <style name="Theme.GameWish.DayNight" parent="Theme.GameWish"/>
    
    <style name="Theme.GameWish" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!--Color-->
        <item name="colorPrimary">@color/grey_700</item>
        <item name="colorPrimaryVariant">@color/grey_800</item>
        <item name="colorSecondary">@color/blue_grey_400</item>
        <item name="colorSecondaryVariant">@color/blue_grey_300</item>

        <item name="android:colorBackground">@color/grey_50</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorPrimarySurfaceVariant">?attr/colorPrimaryVariant</item>
        <item name="colorError">@color/red_400</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/black</item>

        <item name="scrimBackground">@color/white_alpha_060</item>
        <item name="android:statusBarColor">@color/grey_50_alpha_060</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.GameWish.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.GameWish.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.GameWish.LargeComponent</item>

        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.Gamewish.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Gamewish.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Gamewish.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Gamewish.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Gamewish.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Gamewish.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Gamewish.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Gamewish.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Gamewish.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Gamewish.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Gamewish.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Gamewish.Overline</item>

        <item name="emphasisHighAlpha">0.87</item>
        <item name="emphasisMediumAlpha">0.60</item>
        <item name="emphasisDisabledAlpha">0.38</item>

        <item name="motionInterpolatorPersistent">@android:interpolator/fast_out_slow_in</item>
        <item name="motionInterpolatorIncoming">@android:interpolator/decelerate_cubic</item>
        <item name="motionInterpolatorOutgoing">@android:interpolator/accelerate_cubic</item>

        <!--Styles-->
        <item name="materialButtonOutlinedStyle">@style/Widget.GameWish.Button.OutlinedButton</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Surface</item>
        <item name="bottomAppBarStyle">@style/Widget.MaterialComponents.BottomAppBar.PrimarySurface</item>
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
        <item name="bottomNavigationStyle">@style/Widget.GameWish.BottomNavigationView</item>
        <item name="searchViewStyle">@style/SearchStyle</item>
        <item name="switchStyle">@style/Widget.GameWish.Switch</item>

        <!--Theme-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.GameWish.MaterialAlertDialog</item>

        <!--System/Platform attributes-->
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

    </style>

</resources>