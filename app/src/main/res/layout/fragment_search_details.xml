<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.dirzaaulia.gamewish.modules.search.details.SearchDetailsViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".modules.search.details.SearchDetailsFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/search_details_appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_278dp"
            android:fitsSystemWindows="true"
            android:background="@null"
            android:stateListAnimator="@animator/show_toolbar"
            android:animateLayoutChanges="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/search_details_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?android:colorBackground"
                app:statusBarScrim="?android:colorBackground"
                android:fitsSystemWindows="true"
                app:collapsedTitleTextAppearance="@style/TextAppearance.Gamewish.Headline5"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:title="@{viewModel.gamesItem.name}"
                app:titleEnabled="true"
                app:expandedTitleTextAppearance="@style/TextAppearance.GameWish.ExpandedCollapsingToolbar.Title"
                app:toolbarId="@id/toolbar">

                <ImageView
                    android:id="@+id/search_details_background_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_278dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitXY"
                    app:imageUrl="@{viewModel.gamesItem.backgroundImage}"
                    app:layout_collapseMode="parallax"
                    tools:ignore="ContentDescription" />

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:titleTextColor="?colorOnPrimary"
                    app:layout_collapseMode="pin"
                    app:contentInsetStartWithNavigation="0dp"
                    app:navigationIcon="@drawable/ic_baseline_arrow_back_24" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/search_details_nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="@dimen/dimen_8dp"
            android:paddingBottom="72dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp">

                <TextView
                    android:id="@+id/search_details_label_relased"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_date"
                    android:textAppearance="@style/TextAppearance.Gamewish.Headline6"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/search_details_released"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Gamewish.Subtitle1"
                    app:textDateFormatted2="@{viewModel.gamesItem.released}"
                    app:layout_constraintTop_toBottomOf="@id/search_details_label_relased"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="27 November 2020"/>

                <ImageView
                    android:id="@+id/search_details_esrb_rating"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    app:esrbRatingImage="@{viewModel.gamesItem.esrbRating.name}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/search_details_label_platform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:text="@string/platforms"
                    android:textAppearance="@style/TextAppearance.Gamewish.Headline6"
                    app:layout_constraintTop_toBottomOf="@id/search_details_esrb_rating"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/platforms_recyler_view"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    app:setPlatformsDetails="@{viewModel.gamesItem.platforms}"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    app:layout_constraintTop_toBottomOf="@id/search_details_label_platform"
                    tools:listitem="@layout/item_platform_list"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>