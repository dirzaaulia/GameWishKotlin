<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="screenshotsItem"
            type="com.dirzaaulia.gamewish.data.models.Screenshots" />
    </data>

    <ImageView
        android:id="@+id/screenshots_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/game_screenshot_image"
        app:imageUrl="@{screenshotsItem.image}"
        tools:src="@android:drawable/picture_frame"/>

</layout>