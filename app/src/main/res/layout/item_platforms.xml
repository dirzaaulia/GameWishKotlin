<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="com.dirzaaulia.gamewish.modules.fragment.search.tab.modules.adapter.PlatformsAdapter.PlatformsAdapterListener"/>
        <variable
            name="platformItem"
            type="com.dirzaaulia.gamewish.data.models.rawg.Platform"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{(view) -> listener.onItemClicked(view, platformItem)}">

        <ImageView
            android:id="@+id/genre_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp"
            android:scaleType="fitXY"
            app:imageUrl="@{platformItem.imageBackground}"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@android:drawable/dark_header"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/genre_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_8dp"
            android:textAppearance="@style/TextAppearance.Gamewish.Headline5"
            android:text="@{platformItem.name}"
            app:layout_constraintTop_toBottomOf="@id/genre_image"
            tools:text="Assassin's Creed" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:backgroundTint="@color/material_on_surface_stroke"
            app:layout_constraintTop_toBottomOf="@id/genre_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>