<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.dirzaaulia.gamewish.data.models.Screenshots"/>
        <variable
            name="viewModel"
            type="com.dirzaaulia.gamewish.modules.details.imageviewer.DetailsImageViewerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sd_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".modules.details.imageviewer.DetailsImageViewerFragment">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/sd_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize"
            android:scaleType="fitCenter"
            android:contentDescription="@string/game_screenshot_image"
            app:imageUrl="@{viewModel.screenshotsItems.image}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>