<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="?colorPrimary"
            android:orientation="vertical"
            android:paddingTop="88dp"
            android:elevation="0dp">

            <include
                android:id="@+id/home_nav_menu"
                layout="@layout/layout_nav_menu"/>

        </LinearLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            app:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:id="@+id/home_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="0dp"
                app:navigationIcon="@drawable/ic_baseline_menu_24"
                app:title="@string/app_name" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/home_container_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:background="@drawable/background_shape_sheet"
            android:elevation="8dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <TextView
                    android:id="@+id/home_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="GAMEWISH CURRENTLY ON DEVELOPMENT BY DIRZA AULIA"
                    android:textSize="50sp"/>

<!--                <androidx.recyclerview.widget.RecyclerView-->
<!--                    android:id="@+id/wishlist_recycler_view"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    tools:listitem="@layout/support_simple_spinner_dropdown_item"/>-->


        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

</layout>