<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/menu_main_image_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/image_icon_menu_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_baseline_add_24"/>

    <TextView
        android:id="@+id/menu_main_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dimen_4dp"
        android:paddingEnd="@dimen/dimen_4dp"
        app:layout_constraintStart_toEndOf="@id/menu_main_image_icon"
        app:layout_constraintTop_toTopOf="@id/menu_main_image_icon"
        app:layout_constraintBottom_toBottomOf="@id/menu_main_image_icon"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>